<h1>Create a new Post</h1>

<form class="pure-form pure-form-aligned" name="create" action="/create" method="POST">
<fieldset>
  <div class="pure-control-group">
    <label for="title">Title</label>
    <input placeholder="Your Title Here" id="title" name="page[title]" />
  </div>
  <div class="pure-control-group">
    <label for="permalink">Permalink</label>
    <input id="permalink" name="page[permalink]" value="{{fresh_page_permalink}}"/>
  </div>
  <div class="pure-control-group">
    <label for="rawtags">Tags</label>
    <input placeholder="tag1, tag2" id="rawtags" name="page[rawtags]" />
  </div>
  <div class="pure-control-group">
    <label for="body">Body</label>
    <textarea id="body" placeholder="Your Post Here" name="page[body]" /></textarea>
  </div>
  <div class="pure-controls">
    <button class="pure-button pure-button-primary" type="submit"/>publish</button>
  </div>
  </fieldset>
</form>
