<!-- page_content -->
<section class="post">
  <header class="post-header">
   <h2 class="post-title">{{title}}</h2>

   <p class="post-meta">
       Tags:
      {{#links_for_tags}}
        <a class="post-category post-category-design" href="/t/{{tag_name}}">{{tag_name}}</a>
      {{/links_for_tags}}
      {{^links_for_tags}}<small>none</small>{{/links_for_tags}}
      Written at: <small><a href="{{ref}}">{{ts}}</a></small>
    </p>
  </header>

  <div class="post-description">
    <p>
      {{body}}
    </p>
  </div>
</section>
<!-- /page_content -->
